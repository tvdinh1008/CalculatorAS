<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:text=""
        android:paddingRight="20dp"
        android:background="#D0D0D0"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/txtRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:background="#D0D0D0"
        android:text="0"
        android:paddingRight="20dp"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/txtRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:background="#D0D0D0"
        android:text=""
        android:paddingRight="20dp"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="CE"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="C"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnBS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="BS"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="/"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="7"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="8"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="9"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnX"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="x"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="4"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="5"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="6"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="-"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="1"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="2"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="+"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="+/-"
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCDDE1"
            android:layout_margin="1dp"
            android:text="0"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7F8FA6"
            android:layout_margin="1dp"
            android:text="."
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF4500"
            android:layout_margin="1dp"
            android:text="="
            android:fontFamily="sans-serif-condensed"
            android:textSize="40sp"/>
    </LinearLayout>
</LinearLayout>
